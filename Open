  - {"type":"hysteria2","name":"CCS","server":"23.94.10.146","port":35366,"password":"d7912833-c44b-40e3-a33f-69cf4237a2b0","sni":"www.bing.com","skip-cert-verify":true,"tfo":false}
  - {"type":"vless","name":"TW","server":"sub.danfeng.eu.org","port":443,"uuid":"3bc0a0ea-cef1-4624-ba77-d211df1a0c40","tls":true,"client-fingerprint":"firefox","skip-cert-verify":true,"network":"ws","ws-opts":{"headers":{"Host":"soks.742929.xyz"},"path":"/","early-data-header-name":"Sec-WebSocket-Protocol","max-early-data":2560},"encryption":"none","servername":"soks.742929.xyz"}


# 节点组


proxy-groups:
  - name: "自动选择"
    type: url-test
    proxies:
      - "香港节点"
      - "日本节点"
    url: http://www.gstatic.com/generate_204
    interval: 300

  - name: "手动切换"
    type: select
    proxies:
      - "自动选择"
      - "香港节点"
      - "日本节点"
      - DIRECT

  - name: "国内直连"
    type: select
    proxies:
      - DIRECT
      - "自动选择"

# 规则
rules:
  - GEOIP,CN,国内直连
  - MATCH,手动切换

